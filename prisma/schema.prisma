datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  createdAt DateTime @default(now())
}

model Fornecedor {
  id        Int      @id @default(autoincrement())
  name      String
  cnpj      String   @unique
  email     String?
  phone     String?
  createdAt DateTime @default(now())
}
