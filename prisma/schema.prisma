datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id_user        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  clients     Client[]     
  fornecedores Fornecedor[] 
}

model Client {
  id_client        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  cpf       String   @unique
  data_nasc DateTime
  phone     String?  @unique
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id_user])
}

model Fornecedor {
  id_forne        Int      @id @default(autoincrement())
  name_empresa      String
  cnpj      String   @unique
  email     String?  @unique
  phone     String?  @unique
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id_user])

}
